rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user ID matches the document's userId field
    function isOwner(resource) {
      return request.auth.uid == resource.data.userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own user document
      allow create: if isAuthenticated() && request.auth.uid == userId;
      // Users can only read, update, or delete their own document
      allow read, update, delete: if isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for the 'landings' collection
    match /landings/{landingId} {
      // Users can only read their own landing pages
      allow get: if isAuthenticated() && isOwner(get(/databases/$(database)/documents/landings/$(landingId)));
      // Users can only list (query for) their own landing pages
      allow list: if isAuthenticated() && request.auth.uid == request.query.where.value;

      // Users can create a landing page if they are authenticated and set themselves as the owner
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;

      // Users can only update or delete their own landing pages
      allow update, delete: if isAuthenticated() && isOwner(get(/databases/$(database)/documents/landings/$(landingId)));
    }
  }
}
